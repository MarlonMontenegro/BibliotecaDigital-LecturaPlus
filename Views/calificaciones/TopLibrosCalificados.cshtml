@model List<LecturaPlusWeb.Models.LibroConCalificacion>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <h2 class="text-2xl font-bold mb-4 text-gray-800 text-center">Top 5 Libros Mejor Calificados</h2>

    <div class="relative overflow-x-auto">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 ">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 ">
            <tr>
                <th scope="col" class="px-6 py-3">#</th>
                <th scope="col" class="px-6 py-3">Título</th>
                <th scope="col" class="px-6 py-3">Promedio de Calificación</th>
            </tr>
            </thead>
            <tbody>
            @{
                var medallas = new[] { "🥇", "🥈", "🥉", "🏅", "🏅" };
                var index = 0;
            }
            @foreach (var libro in Model)
            {
                <tr class="bg-white border-b  border-gray-200">
                    <td class="px-6 py-4">
                        @medallas[index]
                    </td>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                        @libro.Titulo
                    </th>
                    <td class="px-6 py-4">
                        @libro.PromedioCalificacion.ToString("0.0")
                    </td>
                </tr>
                index++;
            }
            </tbody>
        </table>
    </div>
</div>